<div class="container" style="margin: 15em auto;">
	<div class="row">
		<div class="col-6 offset-3">
			<h2 style="font-family:Minerva Modern;">Modificar la noticia:</h2>
			<form method="post" action="/admin/novedades/modificar">
				<input type="hidden" value="{{novedad.id}}" class="form-control" name="id">
				<div class="form-group">
					<input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control" name="titulo">
				</div>
				<br>
				<div class="form-group">
					<textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
				</div>
				<br>
				<div class="form-group">
					<textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
				</div>
				<br>
				<button type="submit" class="btn btn-primary" style="margin-left: 15em; margin-rigth: 15em; background: darkolivegreen; border-color: darkolivegreen;">Modificar</button>
				{{#if error}}
				    <h4>{{message}}</h4>
				{{/if}}
			</form>
		</div>
	</div>
</div>